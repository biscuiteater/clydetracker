<h1>Create New user</h1>

<table>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <tr>
    <td align="right"><%= f.label :username %></td>
    <td><%= f.text_field :username %></td>
  </tr>
  <tr>
    <td align="right"><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td align="right"><%= f.label :password_confirmation, 'Confirm' %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td colspan="2" align="right">
      <%= f.submit 'Create' %>
      <input type="button" onclick="location.href='<%= root_path %>';" value="Not Now">
    </td>
  </tr>
<% end %>

</table>

