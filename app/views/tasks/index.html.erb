<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Story</th>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Hours</th>
    <th>Status</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.story_id %></td>
    <td><%=h task.title %></td>
    <td><%=h task.description %></td>
    <td><%=h task.author_id %></td>
    <td><%=h task.hours %></td>
    <td><%=h task.status_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>